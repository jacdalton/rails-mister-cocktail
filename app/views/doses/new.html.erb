<div class="new-cocktail container p-3">
  <div class="row justify-content-center">
    <div class="col-auto">
      <div class="card p-3 w-100">
        <h1>Add a dose to <%= @cocktail.name %></h1>
        <%= simple_form_for [@cocktail, @dose] do |f| %>
          <%= f.input :description, placeholder: '1 shot, 3 parts, etc..' %>
          <%= f.association :ingredient %>
          <%= f.button :submit, class: "btn btn-warning" %>
        <% end %>

        <%= link_to "Back to cocktail", cocktail_path(@cocktail) %>
      </div>
    </div>
  </div>
</div>
