<div class="navbar-lewagon">
  <div class="navbar-content">
    <h1>Get Boozy</h1>
    <p>Pour out some liquor, make it an old fashioned</p>
  </div>
  <%= link_to new_cocktail_path do %>
    <button class="btn btn-outline-primary">Add Cocktail</button>
  <% end %>
</div>

<div class="container-fluid">
  <div class="row justify-content-center">
    <% @cocktails.each do |c| %>
      <div class="col p-3">
        <div class="card" style="width: 18rem;">
        <% if c.photo.present? %>
        <%= cl_image_tag c.photo, class: "card-img-top" %>
        <% else %>
        <%= image_tag "Old-Fashioned.jpg", class: "card-img-top" %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= link_to c.name, cocktail_path(c) %></h5>
        </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
